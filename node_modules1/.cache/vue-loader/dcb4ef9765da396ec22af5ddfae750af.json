sContent":["<template>\r\n  <div class=\"rich-text-editor\">\r\n    <!-- @TODO add proper condition on v-if -->\r\n    <div v-if=\"false\" class=\"rich-text-editor__image\">\r\n      <!-- @TODO make it dynamic -->\r\n      <!-- @TODO remove height -->\r\n      <img\r\n        height=\"4\"\r\n        src=\"https://i.pinimg.com/originals/2b/52/7d/2b527dfbe670cd5a746425eb30e2740d.jpg\"\r\n        alt=\"downloaded-image\"\r\n      />\r\n      <button type=\"button\" class=\"rich-text-editor__delete-btn\">\r\n        Delete image\r\n      </button>\r\n    </div>\r\n    <ul class=\"rich-text-editor__tools active\">\r\n      <li\r\n        v-for=\"c in commands\"\r\n        :key=\"c.id\"\r\n        :class=\"{ active: activeCommands.includes(c.type) }\"\r\n      >\r\n        <button type=\"button\" @click=\"() => handleExecCommand(c.type)\">\r\n          <component :is=\"c.icon\" />\r\n        </button>\r\n      </li>\r\n    </ul>\r\n    <div class=\"textarea-container\">\r\n      <div\r\n        ref=\"editorArea\"\r\n        class=\"textarea\"\r\n        contenteditable=\"true\"\r\n        data-placeholder=\"Type your comment here\"\r\n        @keyup.ctrl.73=\"() => handleKeyDown('italic')\"\r\n        @keyup.ctrl.66=\"() => handleKeyDown('bold')\"\r\n        @keyup.ctrl.85=\"() => handleKeyDown('underline')\"\r\n        @input=\"handleInput\"\r\n      >\r\n        {{ value }}\r\n      </div>\r\n      <slot />\r\n    </div>\r\n    <ul class=\"rich-text-editor__social-links active\">\r\n      <li v-for=\"a in mediaActions\" :key=\"a.id\">\r\n        <button type=\"button\">\r\n          <component :is=\"a.icon\" />\r\n        </button>\r\n      </li>\r\n    </ul>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport {\r\n  commands,\r\n  mediaActions,\r\n  getQueryCommandState,\r\n  execCommand\r\n} from '@/services/rich-text-editor.service';\r\n// media\r\nimport LinkIcon from '~svg/media/link.svg';\r\nimport AudioIcon from '~svg/media/audio.svg';\r\nimport ImageIcon from '~svg/media/image.svg';\r\nimport VideoIcon from '~svg/media/video.svg';\r\n// commands\r\nimport Bold from '~svg/text-editing/bold.svg';\r\nimport InsertUnorderedList from '~svg/text-editing/insertUnorderedList.svg';\r\nimport FormatBlockH1 from '~svg/text-editing/formatBlockH1.svg';\r\nimport FormatBlockH2 from '~svg/text-editing/formatBlockH2.svg';\r\nimport Italic from '~svg/text-editing/italic.svg';\r\nimport Lowercase from '~svg/text-editing/lowercase.svg';\r\nimport InsertOrderedList from '~svg/text-editing/insertOrderedList.svg';\r\nimport Sentencecase from '~svg/text-editing/sentencecase.svg';\r\nimport StrikeThrough from '~svg/text-editing/strikeThrough.svg';\r\nimport Subscript from '~svg/text-editing/subscript.svg';\r\nimport Superscript from '~svg/text-editing/superscript.svg';\r\nimport Underline from '~svg/text-editing/underline.svg';\r\nimport Uppercase from '~svg/text-editing/uppercase.svg';\r\n\r\nexport default {\r\n  components: {\r\n    LinkIcon,\r\n    AudioIcon,\r\n    ImageIcon,\r\n    VideoIcon,\r\n    Bold,\r\n    InsertUnorderedList,\r\n    FormatBlockH1,\r\n    FormatBlockH2,\r\n    Italic,\r\n    Lowercase,\r\n    InsertOrderedList,\r\n    Sentencecase,\r\n    StrikeThrough,\r\n    Subscript,\r\n    Superscript,\r\n    Underline,\r\n    Uppercase\r\n  },\r\n  props: {\r\n    value: {\r\n      type: String,\r\n      default: ''\r\n    }\r\n  },\r\n  data() {\r\n    return {\r\n      activeCommands: [],\r\n      commands,\r\n      mediaActions\r\n    };\r\n  },\r\n  methods: {\r\n    handleInput(e) {\r\n      this.$emit('input', e.target.innerHTML);\r\n    },\r\n    handleKeyDown(type) {\r\n      this.setActiveCommand(type);\r\n    },\r\n    setActiveCommand(type) {\r\n      const isTurnOn = this.getQueryCommandState(type);\r\n\r\n      if (isTurnOn) {\r\n        this.activeCommands.push(type);\r\n      } else {\r\n        const searchedTypeIndex = this.activeCommands.findIndex(\r\n          a => a === type\r\n        );\r\n\r\n        if (searchedTypeIndex !== -1)\r\n          this.activeCommands.splice(searchedTypeIndex, 1);\r\n      }\r\n    },\r\n    handleExecCommand(type) {\r\n      execCommand(type);\r\n      this.setActiveCommand(type);\r\n    },\r\n    getQueryCommandState\r\n  },\r\n  mounted() {\r\n    this.$refs.editorArea.innerHTML = this.value;\r\n  }\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.textarea {\r\n  height: auto;\r\n  flex-grow: 1;\r\n  min-height: 50px;\r\n  max-height: 350px;\r\n  border: 1px solid var(--border-input-comment-normal);\r\n  font-size: var(--size-regular);\r\n  padding: var(--element-padding-m) var(--element-padding-s);\r\n  border-radius: var(--border-radius);\r\n  background-color: var(--BG-blog-post);\r\n  margin-bottom: var(--element-margin-l);\r\n  color: var(--text-primary);\r\n  margin-right: var(--element-margin-s);\r\n  word-break: break-all;\r\n  overflow: auto;\r\n  resize: vertical;\r\n\r\n  &-container {\r\n    display: flex;\r\n  }\r\n\r\n  &:empty {\r\n    &:before {\r\n      content: attr(data-placeholder);\r\n    }\r\n  }\r\n\r\n  &:focus:before {\r\n    display: none;\r\n  }\r\n}\r\n\r\n.rich-text-editor {\r\n  display: flex;\r\n  flex-direction: column;\r\n  flex: 1 0 0;\r\n\r\n  &__delete-btn {\r\n    background-color: var(--color-main-800);\r\n    color: var(--color-white);\r\n    padding: var(--element-padding-s) var(--element-padding-l);\r\n    font-size: var(--size-regular);\r\n    position: absolute;\r\n    bottom: 0;\r\n    right: 0;\r\n    border-radius: var(--border-radius);\r\n    cursor: pointer;\r\n  }\r\n\r\n  &__image {\r\n    margin-bottom: var(--element-margin-m);\r\n    position: relative;\r\n\r\n    img {\r\n      display: block;\r\n      opacity: var(--opacity-image-overlay);\r\n    }\r\n  }\r\n\r\n  &__tools {\r\n    margin: 0;\r\n    display: none;\r\n    margin-bottom: var(--element-margin-s);\r\n    list-style: none;\r\n    justify-content: space-between;\r\n    max-width: 390px;\r\n    flex-wrap: wrap;\r\n    &.active {\r\n      display: flex;\r\n    }\r\n    /*@TODO switch to className instead of tag*/\r\n    li {\r\n      height: 24px;\r\n      flex-grow: 1;\r\n      border: var(--border-width-thin) solid var(--border-button-tools);\r\n      border-left: none;\r\n      text-align: center;\r\n      transition: var(--default-transition);\r\n\r\n      &:first-child {\r\n        border-left: var(--border-width-thin) solid var(--border-button-tools);\r\n        border-top-left-radius: var(--border-radius);\r\n        border-bottom-left-radius: var(--border-radius);\r\n      }\r\n\r\n      &:last-child {\r\n        border-top-right-radius: var(--border-radius);\r\n        border-bottom-right-radius: var(--border-radius);\r\n      }\r\n\r\n      &.active {\r\n        background-color: green;\r\n      }\r\n    }\r\n\r\n    button {\r\n      background-color: transparent;\r\n      color: var(--border-button-tools);\r\n      vertical-align: middle;\r\n\r\n      svg {\r\n        fill: var(--text-activity-name-active);\r\n        vertical-align: middle;\r\n      }\r\n    }\r\n  }\r\n\r\n  &__social-links {\r\n    display: none;\r\n    list-style: none;\r\n\r\n    &.active {\r\n      display: flex;\r\n    }\r\n    button {\r\n      padding: 0 var(--button-padding-s);\r\n      background-color: transparent;\r\n\r\n      svg {\r\n        fill: var(--text-primary);\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>\r\n"]}]}