urcesContent":["<template>\r\n  <transition name=\"fade\" appear>\r\n    <div\r\n      class=\"modal-overlay\"\r\n      :class=\"{ 'has-overflow': hasOverflow }\"\r\n      v-if=\"settings.show\"\r\n      tabindex=\"0\"\r\n      @keydown.esc=\"() => close({ clickOutside: true })\"\r\n    >\r\n      <div\r\n        ref=\"modal\"\r\n        class=\"modal\"\r\n        v-click-outside=\"() => close({ clickOutside: true })\"\r\n      >\r\n        <slot name=\"modal-image\" />\r\n        <!-- /*@TODO test click.stop*/ -->\r\n        <div class=\"modal-content\" @click.stop>\r\n          <header class=\"modal-header\">\r\n            <slot name=\"header\" v-if=\"!settings.hideHeader\">\r\n              <h2 class=\"modal-header__title\" v-if=\"settings.title\">\r\n                {{ settings.title }}\r\n              </h2>\r\n            </slot>\r\n            <button\r\n              type=\"button\"\r\n              class=\"modal-header-btn__close\"\r\n              @click=\"close\"\r\n            ></button>\r\n          </header>\r\n          <section class=\"modal-body\">\r\n            <slot name=\"body\"></slot>\r\n          </section>\r\n          <footer\r\n            class=\"modal-footer\"\r\n            v-if=\"settings.dismissText || settings.actionText\"\r\n          >\r\n            <slot name=\"footer\">\r\n              <div class=\"footer-wrapper-btns\">\r\n                <form-button\r\n                  :text=\"settings.dismissText\"\r\n                  type=\"button\"\r\n                  v-if=\"settings.dismissText\"\r\n                  @click.native.stop=\"close\"\r\n                  class=\"modal-footer__btn\"\r\n                />\r\n                <form-button\r\n                  :text=\"settings.actionText\"\r\n                  type=\"submit\"\r\n                  v-if=\"settings.actionText\"\r\n                  @click.native.stop=\"save\"\r\n                  class=\"modal-footer__btn form-button\"\r\n                />\r\n              </div>\r\n            </slot>\r\n          </footer>\r\n        </div>\r\n        <div class=\"modal-tags\" v-if=\"tags\" @click.stop>\r\n          <h3 class=\"modal-tags__title\">Favourite tags</h3>\r\n          <form-input\r\n            class=\"input-search\"\r\n            type=\"search\"\r\n            placeholder=\"Search\"\r\n            name=\"search-tag\"\r\n          />\r\n          <tags-list :list=\"tags\" />\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </transition>\r\n</template>\r\n<script>\r\nimport { APP_TITLE } from '@/services/config';\r\nimport ClickOutside from 'vue-click-outside';\r\nimport FormButton from '~common/Buttons/FormButton';\r\nimport FormInput from './Fields/FormInput';\r\nimport TagsList from './TagsList';\r\n\r\nexport default {\r\n  props: {\r\n    settings: {\r\n      type: Object,\r\n      default() {\r\n        return {\r\n          title: APP_TITLE,\r\n          hideHeader: false,\r\n          show: false,\r\n          auth: false,\r\n          dismissText: null,\r\n          actionText: null\r\n        };\r\n      },\r\n      required: true\r\n    },\r\n    isCloseOutside: {\r\n      type: Boolean,\r\n      default: true\r\n    },\r\n    tags: {\r\n      type: Array\r\n    }\r\n  },\r\n  components: {\r\n    FormButton,\r\n    FormInput,\r\n    TagsList\r\n  },\r\n  directives: {\r\n    ClickOutside\r\n  },\r\n  data() {\r\n    return {\r\n      resizeCounter: 1,\r\n      ro: null,\r\n      windowHeight: null\r\n    };\r\n  },\r\n  computed: {\r\n    hasOverflow() {\r\n      return (\r\n        this.resizeCounter && this.$refs.modal?.offsetHeight > this.windowHeight\r\n      );\r\n    }\r\n  },\r\n  methods: {\r\n    onResize() {\r\n      this.windowHeight = window.innerHeight;\r\n    },\r\n    close({ clickOutside = false }) {\r\n      if (clickOutside && !this.isCloseOutside) return;\r\n\r\n      this.settings.show = false;\r\n      this.$emit('close');\r\n    },\r\n    save() {\r\n      /*@TODO add save method and if we need 'close' add it */\r\n      this.$emit('save');\r\n    },\r\n    resizeObserverHandler() {\r\n      // @see https://caniuse.com/#search=resizeobserver\r\n      this.ro =\r\n        this.$refs.modal &&\r\n        new ResizeObserver(() => this.resizeCounter++).observe(\r\n          this.$refs.modal\r\n        );\r\n    }\r\n  },\r\n  mounted() {\r\n    this.$nextTick(() => {\r\n      /*@TODO revise*/\r\n      this.resizeObserverHandler();\r\n      window.addEventListener('resize', this.onResize);\r\n      this.onResize();\r\n    });\r\n  },\r\n  beforeDestroy() {\r\n    window.removeEventListener('resize', this.onResize);\r\n  }\r\n};\r\n</script>\r\n<style lang=\"scss\" scoped>\r\n.modal {\r\n  overflow-x: auto;\r\n  display: flex;\r\n  position: relative;\r\n\r\n  /** @TODO fix warnings */\r\n  &-overlay {\r\n    position: fixed;\r\n    width: 100vw;\r\n    height: 100vh;\r\n    top: 0;\r\n    left: 0;\r\n    background-color: var(--popup-overlay);\r\n    overflow: auto;\r\n    z-index: var(--z-index-popup);\r\n\r\n    &.has-overflow {\r\n      align-items: flex-start;\r\n    }\r\n  }\r\n  &-content {\r\n    margin: 0 var(--element-margin-xxl);\r\n    border-radius: var(--border-radius);\r\n    overflow: hidden;\r\n  }\r\n  &-body {\r\n    background: var(--BG-primary);\r\n    padding: var(--element-padding-xl) var(--element-padding-l);\r\n  }\r\n  &-header {\r\n    display: flex;\r\n    justify-content: space-between;\r\n    align-items: center;\r\n    background: var(--BG-modal-window);\r\n    padding: var(--element-padding-l);\r\n    position: relative;\r\n    box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.15);\r\n    z-index: var(--z-index-1);\r\n    &__title {\r\n      font-family: 'OpenSans-Bold', sans-serif;\r\n      font-size: var(--size-title);\r\n      color: var(--text-primary);\r\n      margin-bottom: 0;\r\n    }\r\n    ::v-deep &-btn {\r\n      &__close {\r\n        background: unset;\r\n        cursor: pointer;\r\n        width: 20px;\r\n        height: 20px;\r\n        align-self: flex-start;\r\n        position: absolute;\r\n        top: 20px;\r\n        right: 20px;\r\n        &:focus {\r\n          outline: none;\r\n          &:before,\r\n          &:after {\r\n            background-color: var(--text-button-hover);\r\n          }\r\n        }\r\n\r\n        &:before,\r\n        &:after {\r\n          position: absolute;\r\n          content: '';\r\n          top: 50%;\r\n          left: 50%;\r\n          width: 2px;\r\n          height: 20px;\r\n          background-color: var(--text-primary);\r\n          border-radius: 2px;\r\n        }\r\n        &:before {\r\n          transform: translate(-50%, -50%) rotate(45deg);\r\n        }\r\n        &:after {\r\n          transform: translate(-50%, -50%) rotate(-45deg);\r\n        }\r\n      }\r\n    }\r\n  }\r\n  &-footer {\r\n    background: var(--BG-modal-window);\r\n    padding: var(--element-margin-l) 0;\r\n    display: flex;\r\n    justify-content: center;\r\n    box-shadow: 0 0 6px 0 rgba(0, 0, 0, 0.15);\r\n    &__btn {\r\n      width: 100px;\r\n      &:first-child {\r\n        margin-right: var(--element-margin-s);\r\n      }\r\n    }\r\n  }\r\n\r\n  &-tags {\r\n    position: absolute;\r\n    left: calc(50% + 290px + var(--element-margin-m));\r\n    top: var(--element-margin-m);\r\n    background-color: var(--BG-blog-post);\r\n    width: var(--width-small);\r\n    z-index: var(--z-index-popup);\r\n    border-radius: var(--border-radius);\r\n    padding: var(--element-padding-m);\r\n\r\n    &__title {\r\n      margin-bottom: var(--element-margin-m);\r\n      color: var(--text-primary);\r\n      font-size: var(--size-title);\r\n      font-family: 'OpenSans-Bold', sans-serif;\r\n    }\r\n  }\r\n}\r\n.modal-overlay {\r\n  &--centered {\r\n    overflow: hidden;\r\n    display: flex;\r\n    justify-content: center;\r\n    align-items: center;\r\n  }\r\n  .modal {\r\n    overflow: hidden;\r\n  }\r\n  .modal-content {\r\n    width: var(--width-medium);\r\n  }\r\n}\r\n</style>\r\n"]}]}