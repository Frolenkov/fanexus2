\">\r\n      <div class=\"edit-blog__header-wrapper\">\r\n        <add-image\r\n          :type=\"blogImageTypes.avatar\"\r\n          class=\"edit-blog__header-add-img\"\r\n          @add=\"handleAddImage\"\r\n          button-text=\"Add New Image\"\r\n        >\r\n          <avatar\r\n            class=\"blog-header__avatar\"\r\n            size=\"xl\"\r\n            :file=\"avatarImageData\"\r\n          />\r\n        </add-image>\r\n      </div>\r\n      <tabs\r\n        :tabs=\"navTabs\"\r\n        @selectTab=\"$active => setComponent($active, $active)\"\r\n        :active=\"activeTab\"\r\n      />\r\n    </div>\r\n    <div class=\"edit-blog__content\">\r\n      <div class=\"edit-blog__content-wrapper\">\r\n        <sidebar-form\r\n          placeholder-name=\"Blog Name\"\r\n          placeholder-desc=\"Blog Description\"\r\n          :show-buttons=\"true\"\r\n          :data=\"data\"\r\n          :errors=\"errors\"\r\n          @save=\"onSave\"\r\n        />\r\n      </div>\r\n      <div class=\"edit-blog__content-main\">\r\n        <keep-alive>\r\n          <component\r\n            :is=\"currentComponent\"\r\n            :data=\"data\"\r\n            :settings=\"settings\"\r\n            @save=\"onSave\"\r\n            :disabled=\"false\"\r\n          />\r\n        </keep-alive>\r\n      </div>\r\n      <div class=\"edit-blog__content-wrapper\">\r\n        <sidebar-tags\r\n          class=\"edit-community__content-tags\"\r\n          :isTagsEdit=\"true\"\r\n          :tags=\"tagItems\"\r\n        />\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport FormButton from '../common/Buttons/FormButton';\r\nimport { mapState, mapActions } from 'vuex';\r\nimport AddImage from '../common/AddImage';\r\nimport Tabs from '../common/Tabs';\r\nimport tabsMixin from '@/mixins/tabs.mixin';\r\nimport SidebarForm from '../common/SidebarForm';\r\nimport SidebarTags from '../common/SidebarTags';\r\nimport BlogSettings from './BlogSettings';\r\nimport {\r\n  getBlogData,\r\n  blogAreas,\r\n  blogRoot,\r\n  blogImageTypes,\r\n  editBlog\r\n} from '@/services/Blog/blog.service';\r\nimport settings from '@/services/Blog/blog.settings';\r\nimport getComponentsByPrefix from '@/utils/getComponentsByPrefix';\r\nimport Wallpaper from '~common/Wallpaper';\r\nimport Avatar from '~common/Avatar';\r\n\r\nexport default {\r\n  name: 'BlogEditBlog',\r\n  components: {\r\n    SidebarForm,\r\n    AddImage,\r\n    SidebarTags,\r\n    Tabs,\r\n    BlogSettings,\r\n    Wallpaper,\r\n    Avatar,\r\n    FormButton\r\n  },\r\n  props: {\r\n    id: {\r\n      type: undefined,\r\n      required: true\r\n    }\r\n  },\r\n  mixins: [tabsMixin],\r\n  data() {\r\n    return {\r\n      blogImageTypes,\r\n      errors: [],\r\n      settings,\r\n      navTabs: [\r\n        {\r\n          title: 'Settings',\r\n          component: blogAreas.settings\r\n        }\r\n      ],\r\n      data: null,\r\n      activeTab: 0,\r\n      currentComponent: null\r\n    };\r\n  },\r\n  computed: {\r\n    ...mapState({\r\n      activeAliasId: state => state.alias.activeAliasId,\r\n      tags: state => state.tags.list\r\n    }),\r\n    /** @TODO make it common between blog and community */\r\n    coverImageData() {\r\n      if (!this.data || !this.data.coverImage) return '';\r\n\r\n      return this.data.coverImage.accessUrl || this.data.coverImage.src;\r\n    },\r\n    /** @TODO make it common between blog and community */\r\n    avatarImageData() {\r\n      if (!this.data || !this.data.avatar) return '';\r\n\r\n      return this.data.avatar.accessUrl || this.data.avatar.src;\r\n    },\r\n    /** @TODO make it common between blog and community */\r\n    blogComponents() {\r\n      return getComponentsByPrefix.call(this, blogRoot);\r\n    },\r\n    tagItems() {\r\n      return this.tags.map(tag => ({ name: tag, id: 0 }));\r\n    }\r\n  },\r\n  methods: {\r\n    handleAddImage({ type, data }) {\r\n      this.data[type] = { ...data };\r\n    },\r\n    async onSave() {\r\n      const {\r\n        name,\r\n        link,\r\n        links,\r\n        contentAccessControl,\r\n        followsAccessControl,\r\n        commentsAccessControl,\r\n        reactionsAccessControl,\r\n        description,\r\n        avatar,\r\n        hideFromMinors,\r\n        hideFromSearch,\r\n        coverImage\r\n      } = this.data;\r\n      const payload = {\r\n        alias: this.activeAliasId,\r\n        name,\r\n        link,\r\n        links,\r\n        contentAccessControl,\r\n        followsAccessControl,\r\n        commentsAccessControl,\r\n        reactionsAccessControl,\r\n        hideFromMinors,\r\n        hideFromSearch,\r\n        description,\r\n        tagNames: this.tags\r\n      };\r\n\r\n      /** @TODO make it common between blog and community */\r\n      payload.links = payload.links.filter(link => link.length);\r\n\r\n      /** @TODO make it common between blog and community */\r\n      if (coverImage.accessUrl) {\r\n        payload.coverImage = coverImage;\r\n      }\r\n      if (avatar.accessUrl) {\r\n        payload.avatar = avatar;\r\n      }\r\n\r\n      await editBlog(this.id, payload);\r\n\r\n      if (this.data.errors) {\r\n        this.errors = this.data.errors;\r\n      } else {\r\n        this.$router.push({\r\n          name: blogRoot,\r\n          params: { name: this.id }\r\n        });\r\n      }\r\n    },\r\n    async getData() {\r\n      /** @TODO revise usage of pagination. it should be done in the background */\r\n      this.data = await getBlogData({ name: this.id, pagination: 1 });\r\n      /** @TODO make it common */\r\n      this.setTagsList(this.data.Tags.map(tag => tag.name));\r\n    },\r\n    setComponent(tabIndex = 0, componentIndex = 0) {\r\n      this.handleSetActiveTab(tabIndex);\r\n      this.currentComponent = this.blogComponents[componentIndex];\r\n    },\r\n    ...mapActions(['setTagsList'])\r\n  },\r\n  mounted() {\r\n    this.getData();\r\n    this.setComponent();\r\n  }\r\n};\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n.edit-blog {\r\n  grid-area: content;\r\n  overflow: auto;\r\n  background-color: var(--BG-primary);\r\n\r\n  &__header {\r\n    display: grid;\r\n    align-items: end;\r\n    grid-template-rows: minmax(0, 60px);\r\n    grid-template-columns: var(--width-small) max-content var(--width-small);\r\n    grid-gap: var(--element-margin-xl);\r\n    background-color: var(--BG-blog-post);\r\n    padding: 0 var(--element-padding-xl);\r\n    margin-bottom: var(--element-margin-xl);\r\n\r\n    &-wrapper {\r\n      border: var(--border-width-avatar) solid var(--color-white);\r\n      height: 200px;\r\n      z-index: 1;\r\n      border-radius: var(--border-radius);\r\n    }\r\n\r\n    &-add-img {\r\n      height: 100%;\r\n\r\n      ::v-deep .xl {\r\n        border-radius: 0;\r\n        height: 100%;\r\n      }\r\n    }\r\n  }\r\n\r\n  &__content {\r\n    padding: 0 var(--element-padding-xl);\r\n    display: grid;\r\n    grid-gap: var(--element-padding-xl);\r\n    grid-template-columns: var(--width-small) auto var(--width-small);\r\n  }\r\n}\r\n</style>\r\n"]}]}